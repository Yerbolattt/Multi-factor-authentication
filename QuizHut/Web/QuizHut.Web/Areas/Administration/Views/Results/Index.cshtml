@model EventsListAllViewModel
@{
    ViewData["Title"] = "Results";
}

<div class="row">
    <div class="col-md-5 mb-4 ml-md-5">
        <div class="component">
            <div class="card">
                <div class="card-header">
                    <i class="fas fa-circle text-success"></i> Results for:
                </div>
                <div class="card-body p-0 mt-2">
                    <h4 class="card-title pl-3">Last Active Events</h4>
                    @if (Model.Events.Any())
                    {
                        <table class="table table-hover col-12 mt-2">
                            <tbody>

                                @foreach (var _event in Model.Events.Where(x => x.Status["Status"] == "Active").Take(5))
                                {
                                    <tr class="table-success">
                                        <th scope="row" class="pt-3">@_event.Name</th>
                                        <td class="text-right">
                                            <a type="submit" class="btn btn-outline-success py-1" asp-area="Administration" asp-action="EventWithGroups" asp-controller="Events" asp-route-id="@_event.Id">
                                                View Results
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                        <div class="card-footer">
                            <a class="btn btn-outline-primary" asp-area="Administration" asp-action="ActiveEventsAll" asp-controller="Events">See All</a>
                        </div>
                    }
                    else
                    {
                        <div class="card-footer text-left">
                            <p class="ml-2 text-primary">There are no active events at the moment.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-5 mb-4 offset-md-1">
        <div class="component">
            <div class="card">
                <div class="card-header ">
                    <i class="fas fa-circle text-danger"></i> Results for:
                </div>
                <div class="card-body p-0 mt-2">
                    <h4 class="card-title pl-3">Last Ended Events</h4>
                    @if (Model.Events.Any())
                    {
                        <table class="table table-hover col-12 mt-2">
                            <tbody>

                                @foreach (var _event in Model.Events.Where(x => x.Status["Status"] == "Ended").Take(5))
                                {
                                    <tr class="table-danger">
                                        <th scope="row" class="pt-3">@_event.Name</th>
                                        <td class="text-right">
                                            <a class="btn btn-outline-danger py-1" asp-area="Administration" asp-action="EventWithGroups" asp-controller="Events" asp-route-id="@_event.Id">
                                                View Results
                                            </a>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                        <div class="card-footer">
                            <a class="btn btn-outline-primary" asp-area="Administration" asp-action="EndedEventsAll" asp-controller="Events">See All</a>
                        </div>
                    }
                    else
                    {
                        <div class="card-footer text-left">
                            <p class="ml-2 text-primary">There are no ended events at the moment.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
