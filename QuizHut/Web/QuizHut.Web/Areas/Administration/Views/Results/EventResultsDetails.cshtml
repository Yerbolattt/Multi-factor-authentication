@model EventWithGroupAndQuizNamesViewModel
@{
    ViewData["Title"] = "Event Results Details";
}

<div class="card">
    <nav class="navbar navbar-expand-lg navbar-dark bg-neutral p-2">
        <div class="container pl-0">
            @if (Model.IsDeleted)
            {
                <h5 class="mb-0 p-2">Event: <span class="text-primary">@Model.Name</span> (deleted)</h5>
            }
            else
            {
                <h5 class="mb-0 p-2">Event: <span class="text-primary">@Model.Name</span></h5>
            }
        </div>
    </nav>
    @if (Model.GroupsNames.Any())
    {
        @foreach (var name in Model.GroupsNames)
        {
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary p-2">
                <div class="container pl-0">
                    <h5 class="mb-0 p-2 text-white">Results for  @name  group:</h5>
                </div>
            </nav>

            <table class="table table-hover mb-0">
                <thead>
                    <tr class="table-active bg-white">
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-center">Points</th>
                    </tr>
                </thead>
                <tbody>
                    @await Component.InvokeAsync("ResultsByGroup", new { groupName = @name, eventId = @Model.Id })
                </tbody>
            </table>
        }
    }
</div>

