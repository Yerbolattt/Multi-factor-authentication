@model InputQuizViewModel
@{
    ViewData["Title"] = "Quiz Details";
}
<form id="quiz" method="post">
    @* Name *@
    <div class="form-group flex-grow-1 d-inline">
        <nav class="navbar navbar-expand-lg navbar-dark bg-neutral p-2">
            <div class="container">
                <h5 class="mb-0">Quiz Details</h5>
                <button class="navbar-toggler collapsed bg-primary"
                        type="button" data-toggle="collapse"
                        data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse text-center collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item m-1">
                            <a class="nav-link  btn btn-primary"  asp-action="QuestionInput" asp-controller="Questions" asp-route-id="@Model.Id">Add Question</a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="nav-link  btn btn-primary"  asp-action="DeleteQuiz" asp-controller="Quizzes" asp-route-id="@Model.Id">Delete Quiz</a>
                        </li>
                        <li class="nav-item m-1">
                            <a class="nav-link  btn btn-primary"  asp-action="EditDetailsInput" asp-controller="Quizzes" asp-route-id="@Model.Id">Edit</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="component">
            <table class="table table-hover">
                <tbody>
                    <tr class="table-active bg-white">
                        <th scope="row">Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr class="table-active bg-light">
                        <th scope="row">Quiz Password</th>
                        <td>@Model.Password</td>
                    </tr>
                    <tr class="table-active bg-white">
                        <th scope="row">Description</th>
                        <td>@Model.Description</td>
                    </tr>
                    <tr class="table-active bg-white">
                        <th scope="row">Timer</th>
                        <td>@Model.Timer</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    @* questions *@
    @foreach (var question in Model.Questions.OrderBy(x => x.Number))
    {
        @await Html.PartialAsync("_QuestionDetailsPartial", question);
    }
    <a class="btn btn-outline-primary offset-md-4 col-md-4 mt-2 d-inline-block" asp-action="QuestionInput" asp-controller="Questions" asp-route-id="@Model.Id">Add Question</a>
    <a class="btn btn-outline-primary offset-md-4 col-md-4 mt-2 d-inline-block" target="_blank"  asp-action="PDFExport" asp-controller="Quizzes" asp-route-id="@Model.Id">Export To PDF</a>
</form>
