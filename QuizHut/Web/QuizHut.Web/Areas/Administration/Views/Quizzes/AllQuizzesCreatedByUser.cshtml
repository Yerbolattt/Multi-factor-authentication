@model QuizzesAllListingViewModel
@{
    ViewData["Title"] = "Index";
}

<nav class="navbar navbar-expand-lg navbar-dark bg-neutral p-2">
    <div class="container">
        <h5 class="mb-0">Quizzes Managment</h5>
        <button class="navbar-toggler collapsed bg-primary"
                type="button" data-toggle="collapse"
                data-target="#navbarNavDropdown-3"
                aria-controls="navbarNavDropdown-3"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse text-center collapse" id="navbarNavDropdown-3">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item m-1">
                    <a class="nav-link  btn btn-warning" asp-area="" asp-action="DetailsInput" asp-controller="Quizzes">
                        <i class="fas fa-plus-circle"></i>
                        <span class="text-primary">Create New</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<table class="table table-hover">
    <thead>
        <tr class="table-active bg-white">
            <th scope="col">Name</th>
            <th scope="col">Created On</th>
            <th scope="col">Questions</th>
            <th scope="col">Activation Date</th>
            <th scope="col">Duration</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Quizzes.Any())
        {
            @for (int i = 0; i < Model.Quizzes.Count(); i++)
            {
                var quiz = Model.Quizzes[i];

                <tr class="table-warning">
                    <th scope="row">@quiz.Name</th>
                    <td>@quiz.CreatedOn</td>
                    <td>@quiz.QuestionsCount</td>
                    <td>@quiz.ActivationDate</td>
                    <td>@quiz.Duration</td>
                    <td>
                        <form method="post" class="component  navbar-expand-lg text-right">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item m-1">
                                    <a class="nav-link  btn btn-white" href="/Quizzes/Display?id=@quiz.Id">
                                        <i class="far fa-edit"></i>
                                    </a>
                                </li>
                                <li class="nav-item m-1">
                                    <a class="nav-link  btn btn-white" href="/Quizzes/DeleteQuiz?id=@quiz.Id">
                                        <i class="far fa-times-circle"></i>
                                    </a>
                                </li>
                            </ul>
                        </form>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>





