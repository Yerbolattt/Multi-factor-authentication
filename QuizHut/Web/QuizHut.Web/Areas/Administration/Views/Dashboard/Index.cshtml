@using QuizHut.Web.ViewModels.Moderators
@model ModeratorsAllViewModel
@{
    ViewData["Title"] = "Index";

}

@if (Model.NewModerator.IsNotAdded)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
        <i class="fa fa-exclamation-circle"></i>
        <strong>On no!</strong> There is no user with email @Model.NewModerator.Email. Try again !
    </div>
}
    <form method="post" class=" ml-4 mt-2 mb-5" asp-action="Index" asp-controller="Dashboard">
        <div class="component">
            <div class="card">
                <div class="card-header text-info pb-0">
                    <div class="input-group">
                        <input type="email" asp-for="@Model.NewModerator.Email" class="form-control" placeholder="Email">
                        <button type="submit" class="btn btn-primary mx-3">
                            <span>Add New</span>
                        </button>
                    </div>
                    <span asp-validation-for="@Model.NewModerator.Email" class="text-danger ml-5"></span>
                </div>
                <div class="navbar navbar-expand-lg navbar-dark bg-neutral p-3">
                    <h5 class="mb-0">Moderator Managment</h5>
                </div>
                <table class="table table-hover mb-0">
                    <thead>
                        <tr class="table-active bg-white">
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Moderators.Any())
                        {
                            @foreach (var moderator in Model.Moderators)
                            {
                                <tr class="table-warning">
                                    <th scope="row">@moderator.FullName</th>
                                    <td>@moderator.Email</td>
                                    <td>
                                        <div class="component  navbar-expand-lg text-right">
                                            <ul class="navbar-nav ml-auto">
                                                <li class="nav-item m-1">
                                                    <a class="nav-link  btn btn-white" href="/Administration/Dashboard/Delete?id=@moderator.Id">
                                                        Delete
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </form>
