@model EventsListAllViewModel
@{
    ViewData["Title"] = "ResultsAll";
}

<div class="col-md-10 mb-4 ml-md-5">
    <div class="component">
        <div class="card">
                <nav class="navbar navbar-expand-lg navbar-dark bg-neutral p-2">
                    <div class="container my-1">
                        <h5 class="mb-0">All Results</h5>
                    </div>
                </nav>
                <table class="table table-hover col-12 mb-0">
                    <tbody>
                        @foreach (var _event in Model.Events)
                        {
                            <tr class="table-info">
                                <th scope="row" class="pt-3">@_event.Name</th>
                                <th scope="row" class="pt-3 text-center"></th>
                                <td class="text-right">
                                    <a type="submit" class="btn btn-outline-info py-1"
                                       asp-area="Administration"
                                       asp-action="EventResultsDetails"
                                       asp-controller="Results" asp-route-id="@_event.Id">
                                        View Results
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
        </div>
    </div>
    @if (Model.PagesCount > 1)
    {
        <div class="text-center mt-4">
            <ul class="pagination justify-content-center">
                @if (Model.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link"
                           asp-area="Administration"
                           asp-controller="Dashboard"
                           asp-action="ResultsAll"
                           asp-route-page="@Model.PreviousPage">
                            <i class="fas fa-long-arrow-alt-left"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-area="Administration"
                           asp-controller="Dashboard"
                           asp-action="ResultsAll"
                           asp-route-page="@Model.PreviousPage">
                            <i class="fas fa-long-arrow-alt-left"></i>
                        </a>
                    </li>
                }

                @for (int i = 1; i <= Model.PagesCount; i++)
                {
                    if (i == Model.CurrentPage)
                    {
                        <li class="page-item active">
                            <a class="page-link"
                               asp-area="Administration"
                               asp-controller="Dashboard"
                               asp-action="ResultsAll"
                               asp-route-page="@i">
                                @i
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link"
                               asp-area="Administration"
                               asp-controller="Dashboard"
                               asp-action="ResultsAll"
                               asp-route-page="@i">
                                @i
                            </a>
                        </li>
                    }
                }
                @if (Model.CurrentPage == Model.PagesCount)
                {
                    <li class="page-item disabled">
                        <a class="page-link"
                           asp-area="Administration"
                           asp-controller="Dashboard"
                           asp-action="ResultsAll"
                           asp-route-page="@Model.NextPage">
                            <i class="fas fa-long-arrow-alt-right"></i>
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link"
                           asp-area="Administration"
                           asp-controller="Dashboard"
                           asp-action="ResultsAll"
                           asp-route-page="@Model.NextPage">
                            <i class="fas fa-long-arrow-alt-right"></i>
                        </a>
                    </li>
                }
            </ul>
        </div>
    }
</div>
@section InnerNav
{
    @await Html.PartialAsync("_DashboardNavBarPartial")
}
@section Scripts
{
    <script src="~/js/navigation.js" asp-append-version="true"></script>
}