@model GroupDetailsViewModel
@{
    ViewData["Title"] = "Edit";

}

    <div class="col-12 offset-md-1 col-md-8 row">
        @* Name *@
        <div class="form-group flex-grow-1 col-12">
            <nav class="navbar navbar-expand-lg navbar-dark bg-warning p-2">
                <div class="container">
                    <h5 class="my-2">Group Details</h5>
                    @*<button class="navbar-toggler collapsed bg-primary"
                            type="button" data-toggle="collapse"
                            data-target="#navbarNavDropdown"
                            aria-controls="navbarNavDropdown"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse text-center collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item m-1">
                                <a class="nav-link  btn btn-primary" asp-action="QuestionInput" asp-controller="Questions">Add Question</a>
                            </li>
                            <li class="nav-item m-1">
                                <a class="nav-link  btn btn-primary" asp-action="DeleteQuiz" asp-controller="Quizzes">Delete Quiz</a>
                            </li>
                            <li class="nav-item m-1">
                                <a class="nav-link  btn btn-primary" asp-action="EditDetailsInput" asp-controller="Quizzes">Edit</a>
                            </li>
                        </ul>
                    </div>*@
                </div>
            </nav>
            <div class="component">
                <table class="table table-hover">
                    <tbody>
                        <tr class="table-active bg-white">
                            <th scope="row">Name</th>
                            <td>@Model.Name</td>
                        </tr>
                        <tr class="table-active bg-light">
                            <th scope="row">Participants</th>
                            <td>@Model.Participants.Count()</td>
                        </tr>
                        <tr class="table-active bg-white">
                            <th scope="row">Assigned Quizzes</th>
                            <td>@Model.Quizzes.Count</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        @* quizzes *@
        <div class="form-group flex-grow-1 col-12">
            <nav class="navbar navbar-expand-lg navbar-dark bg-warning mt-4 p-2">
                <div class="container">
                    <h5 class="mb-0">Assigned Quizzes</h5>
                    <button class="navbar-toggler collapsed bg-primary"
                            type="button" data-toggle="collapse"
                            data-target="#navbarNavDropdown"
                            aria-controls="navbarNavDropdown"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse text-center collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item m-1">
                                <a class="nav-link  btn btn-primary" asp-action="DeleteQuiz" asp-controller="Quizzes">Add New</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="component">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var quiz in Model.Quizzes)
                        {
                            <tr class="table-active bg-white">
                                <th scope="row">@quiz.Name</th>
                                <td class="text-right">
                                    <button class="btn btn-primary mr-md-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        @* participants *@
        <div class="form-group flex-grow-1 col-12">
            <nav class="navbar navbar-expand-lg navbar-dark bg-warning mt-4 p-2">
                <div class="container">
                    <h5 class="mb-0">Participants</h5>
                    <button class="navbar-toggler collapsed bg-primary"
                            type="button" data-toggle="collapse"
                            data-target="#navbarNavDropdown"
                            aria-controls="navbarNavDropdown"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse text-center collapse" id="navbarNavDropdown">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item m-1">
                                <a class="nav-link  btn btn-primary" asp-action="DeleteQuiz" asp-controller="Quizzes">Add New</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="component">
                <table class="table table-hover">
                    <tbody>
                        @foreach (var participant in Model.Participants)
                        {
                            <tr class="table-active bg-white">
                                <th scope="row">@participant.FullName</th>
                                <th scope="row">@participant.Email</th>
                                <td class="text-right">
                                    <button class="btn btn-primary mr-md-3">Delete</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <a class="btn btn-primary offset-md-4 col-md-4 mt-3 text-white d-inline-block" asp-action="" asp-controller="">Go To Dashboard</a>
    </div>
