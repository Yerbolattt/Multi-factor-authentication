@* groups *@
<div class="form-group flex-grow-1">
    <nav class="navbar navbar-expand-lg navbar-dark bg-warning p-2">
        <div class="container">
            <h5 class="mb-0">Assigned Groups</h5>
            <button class="navbar-toggler collapsed bg-primary"
                    type="button" data-toggle="collapse"
                    data-target="#navbarNavDropdown222"
                    aria-controls="navbarNavDropdown222"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse text-center collapse" id="navbarNavDropdown222">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item m-1">
                        <a asp-area="Administration" asp-action="AddNewEvent" asp-controller="Groups" asp-route-id="@Model.Id" class="nav-link  btn btn-primary">Add New</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="component">
        <table class="table table-hover">
            <tbody>
                @foreach (var group in Model.Groups)
                {
                    <tr class="table-active bg-white">
                        <th scope="row">@group.Name</th>
                        <td class="text-right">
                            <form method="post" asp-action="DeleteEventFromGroup" asp-controller="Groups">
                                <input type="hidden" name="groupId" value="@Model.Id" />
                                <input type="hidden" name="eventId" value="@group.Id" />
                                <button type="submit" class="btn btn-primary mr-md-3">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

