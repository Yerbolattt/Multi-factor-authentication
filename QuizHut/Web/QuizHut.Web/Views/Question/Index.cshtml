@model ReflectionIT.Mvc.Paging.IPagingList<AttemtedQuizQuestionViewModel>
@using ReflectionIT.Mvc.Paging
@addTagHelper*,ReflectionIT.Mvc.Paging
@{
    ViewData["Title"] = "Take";
}

<div class="container-fluid">
    <div class="flex-grow-1">
        <partial name="_BublesAndCirclesPrtial" />
    </div>
    <nav aria-label="Pagination" class="mt-3">
        @await this.Component.InvokeAsync("Pager", new { pagingList = this.Model })
    </nav>

    @foreach (var question in Model)
    {
        <form method="post" class="col-11 mx-5" asp-action="CalculateResult" asp-controller="Quiz">
            <div class="card m-5">
                <div class="card-header text-warning" style="font-size: xx-large">
                    <i class="fas fa-folder-plus"></i>
                    <span class="text-primary ml-1">Question @question.Number</span>
                </div>

                <div class="card-title text-center mt-3 mx-2">
                    <h4>@question.Text</h4>
                </div>
                <hr>
                <div class="card-body px-4">
                    @foreach (var answer in question.Answers)
                    {
                        <div class="form-group mb-0">
                            <div class="mt-2 row">
                                <input type="checkbox" asp-for="@answer.IsRightAnswerAssumption" value="true" class="mt-2 ml-3">
                                <label class="display-6 col-11 mt-0">@answer.Text</label>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer pb-5">
                    <div class="row mx-1 text-white">
                        <button id="addQuestion" type="submit" class="btn btn-primary col-md-5 mt-2">Submit</button>
                        <div class="col-1 mr-4"></div>
                    </div>
                </div>
            </div>
        </form>
    }

    <nav area-label="Pagination">
        <vc:pager paging-list="@Model"> </vc:pager>
    </nav>
</div>

