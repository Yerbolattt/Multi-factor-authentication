
@{
    ViewData["Title"] = "Index";
}

    <form id="questionCard" class="col-11 ml-4">
        <div class="component">
            <div class="card mb-3 mt-3">
                <div class="card-header text-warning" style="font-size: xx-large">
                    <i class="fas fa-folder-plus"></i>
                </div>
                <div class="card-body">
                    <h4 class="card-title">Add New Question</h4>
                    <p class="card-text" style="display: block;">
                        <span class="text-primary mr-1">∗</span>
                        You can always edit it later.
                    </p>
                </div>
                <div class="card-footer pb-5">
                    <div class="input-group">
                        <input id="questionInput" type="text" class="form-control" placeholder="...">
                    </div>
                    <div class="row mx-1 text-white">
                        <button id="add" type="submit" class="btn btn-primary col-md-5 mt-5">Add Question</button>
                        <div class="col-1 mr-4"></div>
                        <button id="cancel" type="submit" class="btn btn-primary col-md-5 mt-5">Finish Quiz</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

