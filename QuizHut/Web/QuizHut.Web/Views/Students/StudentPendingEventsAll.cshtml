@model StudentEventsViewModel<StudentPendingEventViewModel>
@{
    ViewData["Title"] = "Student Pending Events All";
}

<div class="col-md-12 mb-4">
    <div class="card">
        <nav class="navbar navbar-expand-lg navbar-dark bg-info p-2">
            <div class="container pl-0">
                <h5 class="mb-0 p-2 text-white">All Pending Events</h5>
            </div>
        </nav>
        <div class="card-body p-0">
            <table class="table table-hover col-12 mb-0">
                <thead>
                    <tr class="table-active bg-white">
                        <th scope="col">Event</th>
                        <th scope="col">Quiz</th>
                        <th scope="col">Date</th>
                        <th scope="col">From/To</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var _event in Model.Events)
                    {
                        <tr class="table-info">
                            <th scope="row" class="pt-3">@_event.Name</th>
                            <th scope="row" class="pt-3">@_event.QuizName</th>
                            <th scope="row" class="pt-3">@_event.Date</th>
                            <th scope="row" class="pt-3">@_event.Duration</th>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
@if (Model.PagesCount > 1)
{
    <div class="text-center mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="/Students/StudentPendingEventsAll?page=@Model.PreviousPage"><i class="fas fa-long-arrow-alt-left"></i></a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="/Students/StudentPendingEventsAll?page=@Model.PreviousPage"><i class="fas fa-long-arrow-alt-left"></i></a>
                </li>
            }

            @for (int i = 1; i <= Model.PagesCount; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <li class="page-item active">
                        <a class="page-link" href="/Students/StudentPendingEventsAll?page=@i">@i</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" href="/Students/StudentPendingEventsAll?page=@i">@i</a>
                    </li>
                }
            }
            @if (Model.CurrentPage == Model.PagesCount)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="/Students/StudentPendingEventsAll?page=@Model.NextPage"><i class="fas fa-long-arrow-alt-right"></i></a>
                </li>
            }
            else
            {
                <li id="right" class="page-item">
                    <a class="page-link" href="/Students/StudentPendingEventsAll?page=@Model.NextPage"><i class="fas fa-long-arrow-alt-right"></i></a>
                </li>
            }
        </ul>
    </div>
}

@section Profile
{

    <li class="nav-item">
        <a class="btn btn-outline-white ml-2" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
            <i class="fas fa-address-card"></i>  Profile
        </a>
    </li>
}
@section Logout
{
    <li class="nav-item text-primary">
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty } ))">
            <button type="submit" class="btn btn-outline-white ml-2">
                <i class="fas fa-sign-out-alt"></i> Logout
            </button>
        </form>
    </li>
}



