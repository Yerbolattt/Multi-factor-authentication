@using QuizHut.Web.ViewModels.Quiz
@model InputQuizViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="flex-grow-1">
        <partial name="_BublesAndCirclesPrtial" />
    </div>
    <div class="col-12 offset-md-2 col-md-8 mt-4 row">
        <div id="quizNameCard" class="col-11 ml-4">
            <div class="component">
                <div class="card mb-3 mt-3">
                    <div class="card-header text-warning" style="font-size: xx-large">
                        <i class="fas fa-folder-plus"></i>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Name Your Quiz First</h4>
                        <p class="card-text">
                            <span class="text-primary mr-1">∗</span>
                            You can always edit it later.
                        </p>
                    </div>
                    <div class="card-footer pb-5">
                        <div class="input-group">
                            <input type="text" name="Name" class="form-control" placeholder="...">
                        </div>
                        <div class="row mx-4 text-white">
                            <a id="add" class="btn btn-primary col-md-5 mt-5" asp-action="QuestionInput" asp-controller="Question">Add Name</a>
                            <div class="col-1 mr-4"></div>
                            <a id="cancel" class="btn btn-primary col-md-5 mt-5" >Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>