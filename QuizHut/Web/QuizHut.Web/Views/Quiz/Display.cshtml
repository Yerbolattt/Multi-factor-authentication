            <h4>Activation Date</h4>
        </div>
    </nav>
    <input type="date" class="form-control form-control-lg flex-grow-1 mr-2 d-inline text-truncate" value="@Model.ActivationDate">
</div>
@* DurationPartial *@
<div class="form-group flex-grow-1 d-inline">
    <nav class="navbar navbar-expand-lg navbar-dark bg-light mt-4">
        <div class="container">
            <h4>Duration</h4>
        </div>
    </nav>
    <input type="number" class="form-control form-control-lg flex-grow-1 mr-2 d-inline text-truncate" value="@Model.ActivationDate">
</div>

