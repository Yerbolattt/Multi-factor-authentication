
@{
    ViewData["Title"] = "Create";
}

<div class="container-fluid">
    <div class="flex-grow-1">
        <partial name="_BublesAndCirclesPrtial" />
    </div>
    <div class="col-12 offset-md-2 col-md-8 mt-4 row">
        <form id="nameCard" class="col-11 ml-4">
            <div class="component">
                <div class="card mb-3 mt-3">
                    <div class="card-header text-warning" style="font-size: xx-large">
                        <i class="fas fa-folder-plus"></i>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Name Your Quiz First</h4>
                        <p class="card-text">
                            <span class="text-primary mr-1">∗</span>
                            You can always edit it later.
                        </p>
                    </div>
                    <div class="card-footer pb-5">
                        <div class="input-group">
                            <input id="nameInput" type="text" class="form-control" placeholder="...">
                        </div>
                        <div class="row mx-4 text-white">
                            <button id="add" type="submit" class="btn btn-primary col-md-5 mt-5" asp-action="Create" asp-controller="Quiz">Add Name</button>
                            <div class="col-1 mr-4"></div>
                            <a id="cancel" class="btn btn-primary col-md-5 mt-5" href="/Account/Profile">Cancel</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>