@model InputQuizViewModel
@using Microsoft.AspNetCore.Identity
@using QuizHut.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Quiz Details";
    Layout = (string)ViewData["Layout"] ?? "_Layout";
}
<form id="quiz" method="post">
    @* Name *@
    <div class="form-group flex-grow-1 d-inline">
        <nav class="navbar navbar-expand-lg navbar-dark bg-neutral mt-4 p-2">
            <div class="container">
                <h5 class="mb-0">Quiz Details</h5>
                <button class="navbar-toggler collapsed bg-primary"
                        type="button" data-toggle="collapse"
                        data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse text-center collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item m-1">
                            <a class="nav-link  btn btn-primary" href="/Questions/QuestionInput?id=@Model.Id">Add Question</a>
                        </li>
                        <li class="nav-item m-1">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <a class="nav-link  btn btn-primary" href="/Quizzes/DeleteQuiz?id=@Model.Id">Delete Quiz</a>
                            }
                            else
                            {
                                <a class="nav-link  btn btn-primary" asp-action="DeleteQuiz" asp-controller="Quizzes">Delete Quiz</a>
                            }
                        </li>
                        <li class="nav-item m-1">
                            <a class="nav-link  btn btn-primary" href="/Quizzes/EditDetailsInput?id=@Model.Id">Edit</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="component">
            <table class="table table-hover">
                <tbody>
                    <tr class="table-active bg-white">
                        <th scope="row">Name</th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr class="table-active bg-light">
                        <th scope="row">Quiz Password</th>
                        <td>@Model.Password</td>
                    </tr>
                    <tr class="table-active bg-white">
                        <th scope="row">Description</th>
                        <td>@Model.Description</td>
                    </tr>
                    <tr class="table-active bg-light">
                        <th scope="row">Activation Date</th>
                        <td>@Model.ActivationDate</td>
                    </tr>
                    <tr class="table-active bg-white">
                        <th scope="row">Timer</th>
                        <td>@Model.Timer</td>
                    </tr>
                    <tr class="table-active bg-light">
                        <th scope="row">Activity Duration</th>
                        <td><span>From : @Model.ActiveFrom</span> <span class="ml-5">To : @Model.ActiveTo</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    @* questions *@
    @foreach (var question in Model.Questions.OrderBy(x => x.Number))
    {
        @await Html.PartialAsync("_QuestionDetailsPartial", question);
    }
    <a class="btn btn-outline-primary offset-md-4 col-md-4 mt-2 d-inline-block" href="/Questions/QuestionInput?id=@Model.Id">Add Question</a>
    <a class="btn btn-outline-primary offset-md-4 col-md-4 mt-2 d-inline-block" target="_blank" href="/Quizzes/PDFExport?id=@Model.Id">Export To PDF</a>
    @*<a class="btn btn-primary offset-md-4 col-md-4 mt-3 text-white d-inline-block"  asp-action="" asp-controller="">Go To Dashboard</a>*@
</form>
