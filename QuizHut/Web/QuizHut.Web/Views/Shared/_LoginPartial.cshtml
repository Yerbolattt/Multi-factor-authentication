@using QuizHut.Common
@using QuizHut.Data.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item mx-2">
        <p>Hello @(this.User.Identity.Name)!</p>
        <a class="btn btn-outline-light" type="submit" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action(" Index", "Home" , new { area=string.Empty }))">
            Log out
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Register">
            Register
        </a>
    </li>
    <li class="nav-item mx-2">
        <a class="btn btn-outline-light" asp-area="Identity" asp-page="/Account/Login">
            Log in
        </a>
    </li>
    //temporary
    <li class="nav-item mx-2">
        <a class="btn btn-outline-light" asp-action="Profile" asp-controller="Account">
            Profile
        </a>
    </li>
}

