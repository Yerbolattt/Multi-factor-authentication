@{
    ViewData["Title"] = "Create";
}
    <div class="container-fluid">
        <div class="row mb-5 mt-4">
            <div class="col-12 col-md-4  border-right">

                <div class="mt-5">
                    <div class="mb-4 px-4">
                        <h3>New Quiz</h3>
                        <p class="lead">Quiz content will apear here.  If you want to edit it just click over the element.</p>
                    </div>
                </div>
            </div>

            <div class="col-12 offset-md-1 col-md-6 mt-5">
                <div class="row">
                    <div class="col-10 ml-4">
                        <div class="component">
                            <div class="card mb-3 mt-3" style="">
                                <div class="card-header text-warning" style="font-size: xx-large">
                                    <i class="fas fa-folder-plus"></i>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">Name</h4>
                                    <p class="card-text">Name Your Quiz...</p>
                                </div>
                                <div class="card-footer pb-5">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Here">
                                    </div>
                                    <div class="row mx-4">
                                        <a id="addName" class="btn btn-primary col-md-5 mt-5" href="/Quiz/Create">Add</a>
                                        <div class="col-1 mr-4"></div>
                                        <a id="cancel" class="btn btn-primary col-md-5 mt-5" href="/Quiz/Create">Cancel</a>
                                    </div>
                                </div>
                            </div>
                            <div class="card mb-3 mt-3" style="">
                                <div class="card-header text-warning" style="font-size: xx-large">
                                    <i class="fas fa-folder-plus"></i>
                                </div>
                                <div class="card-body">
                                    <h4 class="card-title">Question</h4>
                                    <p class="card-text">Add New Question...</p>
                                </div>
                                <div class="card-footer pb-5">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Here">
                                    </div>
                                    <div class="row mx-4">
                                        <a class="btn btn-primary col-md-5 mt-5" href="/Quiz/Create">Add</a>
                                        <div class="col-1 mr-4"></div>
                                        <a class="btn btn-primary col-md-5 mt-5" href="/Quiz/Create">Cancel</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>






