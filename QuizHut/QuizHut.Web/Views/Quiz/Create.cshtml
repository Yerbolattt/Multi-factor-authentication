@{
    ViewData["Title"] = "Create";
}
<div class="container-fluid">
    <div class="row mb-5 mt-4">
        <div class="col-12 col-md-3 border-right ml-2">
            <div class="mt-5">
                <div class="mb-4">
                    <h3>Elements</h3>
                    <p id="info" class="lead">Choose element to add.</p>
                </div>
            </div>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <div class="my-2">
                        <button type="button" class="btn btn-outline-primary manage-account-btn text-left"><i class="fas fa-plus mr-1"></i> Question</button>
                    </div>
                </li>
                <li class="nav-item active">
                    <div class="my-2">
                        <button type="button" class="btn btn-outline-primary manage-account-btn text-left"><i class="fas fa-plus mr-1"></i> Answer</button>
                    </div>
                </li>
                <li class="nav-item active">
                    <div class="my-2">
                        <button type="button" class="btn btn-outline-primary manage-account-btn text-left"><i class="fas fa-plus mr-1"></i> Image</button>
                    </div>
                </li>
                <li class="nav-item active">
                    <div class="my-2">
                        <button type="button" class="btn btn-outline-primary manage-account-btn text-left"><i class="fas fa-plus mr-1"></i>Text Field</button>
                    </div>
                </li>
            </ul>
        </div>

        <div class="col-12 offset-md-1 col-md-7 mt-4 row">
            <form id="quiz" class="mb-3 col-12" style="display: none;">
                @*<div id="formGroup" class="form-group flex-grow-1 d-inline">
                    <h4><label for="content">Name</label></h4>
                    <input id="content" type="text" class="form-control form-control-lg flex-grow-1 mr-2 d-inline  text-truncate">
                </div>*@

            </form>
            <div id="nameCard" class="col-10 ml-4">
                <div class="component">
                    <div class="card mb-3 mt-3">
                        <div class="card-header text-warning" style="font-size: xx-large">
                            <i class="fas fa-folder-plus"></i>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title">Name Your Quiz First</h4>
                            <p class="card-text"><span class="text-primary mr-1">&lowast;</span>You can always change the name later.</p>
                        </div>
                        <div class="card-footer pb-5">
                            <div class="input-group">
                                <input id="nameInput" type="text" class="form-control" placeholder="Name">
                            </div>
                            <div class="row mx-4 text-white">
                                <a id="addName" class="btn btn-primary col-md-5 mt-5">Add</a>
                                <div class="col-1 mr-4"></div>
                                <a id="cancel" class="btn btn-primary col-md-5 mt-5" asp-action="Profile" asp-controller="Account">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*----------formGroup template-------------------*@
<div id="template" class="form-group flex-grow-1 d-inline" style="display:none">
    <h4><label for="content"></label></h4>
    <input id="content" type="text" class="form-control form-control-lg flex-grow-1 mr-2 d-inline  text-truncate">
</div>






